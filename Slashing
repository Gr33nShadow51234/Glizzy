}



Tab1:Slider{
	Name = "Walk Speed",
	Default = 16,
	Min = 0,
	Max = 250,
	Callback = function(value, Finish) 
        if Finish then player.Character.Humanoid.WalkSpeed = value end
    end
}



Tab1:Slider{
	Name = "Jump Power",
	Default = 50,
	Min = 0,
	Max = 250,
	Callback = function(value, Finish)
        if Finish then player.Character.Humanoid.JumpPower = value end 
    end
}
